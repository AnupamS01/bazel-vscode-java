{
	"name": "bazel-vscode",
	"displayName": "bazel-vscode",
	"publisher": "salesforce",
	"repository": "https://github.com/salesforce/bazel-vscode",
	"description": "bazel-vscode",
	"version": "0.0.5",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:java",
		"onCommand:bazelimport.menus.viewtitle",
		"onCommand:bazelimport.menus.explorercontext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"javaExtensions": [
			"./server/com.salesforce.bazel.eclipse.core.jar",
			"./server/com.salesforce.bazel.eclipse.jdtls.jar",
			"./server/com.salesforce.bazel.importedsource.jar",
			"./server/com.salesforce.bazel.logback.jar",
			"./server/com.salesforce.bazel.sdk.jar",
			"./server/com.github.ben-manes.caffeine.guava.jar",
			"./server/com.github.ben-manes.caffeine.jar",
			"./server/com.google.guava.jar"
		],
		"javaBuildFilePatterns": [
			"^WORKSPACE(\\.bazel)?$",
			"^BUILD(\\.bazel)?$",
			".*\\.bazelproject$",
			".*\\.java$"
		],
		"configuration": {
			"title": "BJLS",
			"properties": {
				"java.import.bazel.disabled": {
					"type": "boolean",
					"default": false,
					"description": "Disable the Bazel importer.",
					"scope": "window"
				},
				"java.bazel.log.level": {
					"type": "string",
					"enum": [
						"debug",
						"warn",
						"info",
						"error"
					],
					"default": "info",
					"description": "Configure detailed logging (debug, warn, info, error)",
					"scope": "window"
				}
			}
		},
		"commands": [
			{
				"command": "bazelimport.menus.viewtitle",
				"title": "Import Bazel Project"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "bazelimport.menus.viewtitle",
					"group": "MenuViewTitle"
				}
			]
		},
		"taskDefinitions": [
			{
				"type": "bazel",
				"required": [
					"name",
					"task"
				],
				"properties": {
					"name": {
						"type": "string",
						"description": "The task name"
					},
					"task": {
						"type": "string",
						"description": "The task command"
					}
				}
			}
		]
	},
	"scripts": {
		"build": "run-s build:server build:dev",
		"build:prod": "run-s compile bundle:prod",
		"build:dev": "run-s compile bundle:dev",
		"build:server": "gulp build_or_download",
		"bundle:prod": "cross-env NODE_ENV=production webpack --mode production",
		"bundle:dev": "cross-env NODE_ENV=development webpack --mode development",
		"clean": "rimraf dist node_modules build out",
		"compile": "cross-env NODE_ENV=production run-s compile:*",
		"compile:ts": "run-s compile:ts:*",
		"compile:ts:extension": "tsc --project tsconfig.json",
		"test": "run-s test:*",
		"test:lint": "eslint --ext .js,.ts,.tsx src",
		"test:repo": "gulp repo_check",
		"watch": "run-p watch:*",
		"watch:ts": "run-p watch:ts:*",
		"watch:ts:extension": "tsc --project tsconfig.json --watch",
		"watch:webpack": "cross-env NODE_ENV=development webpack --mode development --watch",
		"repo:fix": "gulp repo_fix"
	},
	"extensionDependencies": [
		"redhat.java",
		"vscjava.vscode-java-debug",
		"vscjava.vscode-java-test",
		"BazelBuild.vscode-bazel"
	],
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"@vscode/vsce": "^2.19.0",
		"cross-env": "^7.0.3",
		"eslint": "^8.44.0",
		"fs-extra": "^11.1.1",
		"glob": "^10.3.3",
		"gulp": "^4.0.0",
		"gulp-decompress": "^3.0.0",
		"gulp-download": "^0.0.1",
		"gulp-filter": "^6.0.0",
		"gulp-regex-rename": "^0.1.0",
		"gulp-rename": "^2.0.0",
		"gulp-util": "^3.0.8",
		"jest": "^29.4.3",
		"jest-css-modules": "^2.1.0",
		"jest-environment-jsdom": "^28.1.3",
		"lodash.template": "^4.5.0",
		"mocha": "^10.2.0",
		"node-stdlib-browser": "^1.2.0",
		"npm-run-all": "^4.1.5",
		"request": "^2.88.2",
		"rimraf": "^3.0.2",
		"semver": "^7.3.8",
		"style-loader": "^3.3.1",
		"ts-jest": "^29.0.5",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6",
		"webpack": "^5.75.0",
		"webpack-bundle-analyzer": "^4.8.0",
		"webpack-cli": "^5.0.1"
	}
}
